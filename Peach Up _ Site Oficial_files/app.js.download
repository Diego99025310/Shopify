        metricsBuffer: [],
        watchedSegments: new Set(),
        currentSession: {
            startTime: Date.now(),
            totalWatchTime: 0,
            videoInteractions: [],
            completedVideos: new Set()
        },
        touchStartY: 0,
        touchStartX: 0,
        lastTouchY: 0,
